<div class="main" ng-controller="businessList">
    <div class="main-inner">
        <div class="container">
            <div class="row">
                <div class="span12">
                    <div class="widget-header">
                        <i class="icon-th-large"></i>
                        <h3>商家列表</h3>
                        <div style="float: right ; padding-right: 10px" >
                            <div style="float: left;  padding-right: 10px">
                                <a href="/admin/manage/editBusiness"  class="btn  btn-success">添加<i class="btn-icon-only icon-plus " style="float: none"> </i></a>
                            </div>
                            <div style="float: right ; padding-right: 10px">
                                <% include ../public/searchBox %>
                            </div>
                        </div>

                    </div> <!-- /widget-header -->
                    <div class="widget-content">
                        <div class="box">
                            <div class="box-body table-responsive no-padding">
                                <table class="table table-hover">
                                    <tr>

                                        <th> 商家名称 </th>
                                        <th> 联系方式</th>
                                        <th> 所在城市</th>
                                        <th> 交易个数</th>
                                        <th class="td-actions"> 操作</th>
                                    </tr>
                                    <tr class="datalist" ng-repeat="content in data">

                                        <td >
                                            <a href="/admin/manage/editBusiness?businessid={{content.businessid}}" >
                                                <span>{{content.name}}</span> </a>
                                        </td>
                                        <td >
                                            <span>{{content.phone}}</span>
                                        </td>
                                        <td >
                                            <span>{{content.province}}/{{content.city}}</span>
                                        </td>
                                        <td >
                                            <a href="{{content.contenturl}}" target="_blank" >
                                                <span>{{content.contenturl}}</span></a>
                                        </td>



                                        <td class="td-actions">
                                            <a href="/admin/manage/editBusiness?businessid={{content.businessid}}"
                                               class="btn btn-small btn-success" ><i class="btn-icon-only icon-edit"> </i></a>
                                            <a href="#"
                                               class="btn btn-small btn-danger" ><i class="btn-icon-only icon-remove-circle "> </i></a>
                                        </td>


                                    </tr>
                                </table>
                            </div><!-- /.box-body -->

                        </div><!-- /.box -->
                        <% include ../public/tableFooter %>
                    </div>

                </div>
            </div>

        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>
<!-- /main-inner -->
</div>


<script>
    ybxcApp.controller("businessList",function($scope,$http){
        $scope.formData = {};
        //获取文档列表信息
        initPagination($scope,$http,"<%=searchKey%>","/admin/manage/#?");


    });



</script>