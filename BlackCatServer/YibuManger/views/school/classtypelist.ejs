
<div class="main" ng-controller="classtypelist">
    <div class="main-inner">
        <div class="container">
            <div class="row">
                <div class="span12">
                    <div class="widget-header">
                        <i class="icon-th-large"></i>
                        <h3>班型列表</h3>
                        <div style="float: right ; padding-right: 10px" >
                            <div style="float: left;  padding-right: 10px">
                                <a href="/admin/manage/editclasstype"  class="btn  btn-success">添加<i class="btn-icon-only icon-plus " style="float: none"> </i></a>
                            </div>
                            <div style="float: right ; padding-right: 10px">
                                <% include ../public/searchBox %>
                            </div>
                        </div>

                    </div> <!-- /widget-header -->
                    <div class="widget-content">
                        <div class="box">
                            <div class="box-body table-responsive no-padding">
                                <table class="table table-hover">
                                    <tr>
                                        <th> 名称 </th>
                                        <th> 开始时间</th>
                                        <th> 结束时间</th>
                                        <th> 驾照类型 </th>
                                        <th> 报名数量</th>
                                        <th> 价格</th>
                                        <th> 上课时间</th>
                                        <th class="td-actions"> 操作</th>
                                    </tr>
                                    <tr class="datalist" ng-repeat="content in data">

                                        <td >
                                            <a href="/admin/manage/editclasstype?classtypeid={{content.classtypeid}}" >
                                                <span>{{content.classname}}</span> </a>
                                        </td>
                                        <td >
                                            <span>{{content.begindate|date:'yyyy-MM-dd'}}</span>
                                        </td>
                                        <td >
                                            <span>{{content.enddate |date:'yyyy-MM-dd'}}</span>
                                        </td>
                                        <td >
                                                <span>{{content.carmodel.name}}</span>
                                        </td>
                                        <td >
                                            <span>{{content.applycount}}</span>
                                        </td>
                                        <td >
                                            <span>{{content.onsaleprice}}/{{content.price}}</span>
                                        </td>
                                        <td >
                                            <span>{{content.classchedule}}</span>
                                        </td>

                                        <td class="td-actions">
                                            <a href="/admin/manage/editclasstype?classtypeid={{content.classtypeid}}"
                                               class="btn btn-small btn-success" ><i class="btn-icon-only icon-edit"> </i></a>
                                            <a href="#"
                                               class="btn btn-small btn-danger" ><i class="btn-icon-only icon-remove-circle "> </i></a>
                                        </td>


                                    </tr>
                                </table>
                            </div><!-- /.box-body -->

                        </div><!-- /.box -->
                        <% include ../public/tableFooter %>
                    </div>

                </div>
            </div>

        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>
<!-- /main-inner -->
</div>


<script>
    ybxcApp.controller("classtypelist",function($scope,$http){
        $scope.formData = {};
        //获取文档列表信息
        initPagination($scope,$http,"<%=searchKey%>","/admin/manage/getclasstypelist?schoolid=<%=schoolid%>");
    });



</script>