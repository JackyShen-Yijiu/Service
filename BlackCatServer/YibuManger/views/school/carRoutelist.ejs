
<div class="main" ng-controller="busRouteList">
    <div class="main-inner">
        <div class="container">
            <div class="row">
                <div class="span12">
                    <div class="widget-header">
                        <i class="icon-th-large"></i>
                        <h3>班车列表</h3>
                        <div style="float: right ; padding-right: 10px" >
                            <div style="float: left;  padding-right: 10px">
                                <a href="/admin/manage/editCarRoute"  class="btn  btn-success">添加<i class="btn-icon-only icon-plus " style="float: none"> </i></a>
                            </div>
                            <div style="float: right ; padding-right: 10px">
                                <% include ../public/searchBox %>
                            </div>
                        </div>

                    </div> <!-- /widget-header -->
                    <div class="widget-content">
                        <div class="box">
                            <div class="box-body table-responsive no-padding">
                                <table class="table table-hover">
                                    <tr>

                                        <th> 路线名称 </th>
                                        <th> 班车时间</th>
                                        <!--<th class="td-actions"> 路线浏览</th>-->
                                        <th class="td-actions"> 操作</th>
                                    </tr>
                                    <tr class="datalist" ng-repeat="content in data">
                                        <td>
                                            <span>{{content.routename}}</span>
                                        </td>
                                        <td>
                                            <span>{{content.begintime}} - {{content.endtime}}</span>
                                        </td>
                                        <!--<td>-->
                                            <!--<a  id="editapplyinfo"-->
                                                <!--ng-click="editApplyinfo()"-->
                                                <!--class="btn btn-small btn-success" >-->
                                                <!--<i class="btn-icon-only icon-eye-open"> </i></a>-->
                                        <!--</td>-->

                                        <td class="td-actions">
                                            <a href="/admin/manage/editCarRoute?car_route_id={{content.id}}"
                                               class="btn btn-small btn-success" ><i class="btn-icon-only icon-edit"> </i></a>
                                            <a href="#"
                                               class="btn btn-small btn-danger" ><i class="btn-icon-only icon-remove-circle "> </i></a>
                                        </td>
                                    </tr>


                                </table>
                            </div><!-- /.box-body -->

                        </div><!-- /.box -->
                        <% include ../public/tableFooter %>
                    </div>
                    <!--start-->
                    <div id="editpage" style="display: none;">
                        <!--弹出层部分-->


                    </div>
                    <!--end-->
                </div>
            </div>

        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>
<!-- /main-inner -->
</div>


<script>
    ybxcApp.controller("busRouteList",function($scope,$http){
        $scope.formData = {};
        //获取文档列表信息
        initPagination($scope,$http,"<%=searchKey%>","/manage/getBusRouteList?schoolid=<%=schoolid%>");

        $scope.editApplyinfo=function(){
            $scope.formData={};
            layer.open({
                type: 1,/*2*/
                title: '具体路线--'+name,
                maxmin: true,
                shadeClose: true, //点击遮罩关闭层
                area : ['600px' , '520px'],
                content:$("#editpage")/*index.html*/
            });
        }
    });



</script>