<div class="main" ng-controller="headmasterlist">
    <div class="main-inner">
        <div class="container">
            <div class="row">
                <div class="span12">
                    <div class="widget-header">
                        <i class="icon-th-large"></i>
                        <h3>校长列表</h3>
                        <div style="float: right ; padding-right: 10px" >
                            <div style="float: left;  padding-right: 10px">
                                <a  ng-click="addheadmaster()"  class="btn  btn-success">添加<i class="btn-icon-only icon-plus " style="float: none"> </i></a>
                            </div>
                            <div style="float: right ; padding-right: 10px">
                                <% include ../public/searchBox %>
                            </div>
                        </div>
                    </div> <!-- /widget-header -->
                    <div class="widget-content">
                        <div class="box">
                            <div class="box-body table-responsive no-padding">
                                <table class="table table-hover">
                                    <tr>
                                        <th>头像</th>
                                        <th> 姓名</th>
                                        <th> 手机号</th>
                                        <th> 用户状态</th>
                                        <th> 所在驾校</th>
                                        <th class="td-actions"> 操作</th>
                                    </tr>
                                    <tr class="datalist" ng-repeat="content in data">

                                        <td >
                                           <img style="height: 60px;width: 60px;"  src="{{content.headportrait}}">
                                        </td>
                                        <td >
                                            <span>{{content.name}}</span>
                                        </td>
                                        <td >
                                            <span>{{content.mobile}}</span>
                                        </td>

                                        <td >
                                            <span>{{content.driveschool.name}}</span>
                                        </td>
                                        <td >
                                            <span ng-switch="content.is_lock">
                                                <div ng-switch-when=false>
                                                    正常
                                                </div>
                                                <div ng-switch-when=true>
                                                    锁定
                                                </div>
                                            </span>
                                        </td>
                                        <td class="td-actions">
                                            <a ng-click="editheadmaster(content._id,content.name)"
                                               class="btn btn-small btn-success" ><i class="btn-icon-only icon-edit"> </i></a>
                                        </td>


                                    </tr>
                                </table>
                            </div><!-- /.box-body -->

                        </div><!-- /.box -->
                        <% include ../public/tableFooter %>
                    </div>
                    <div id="editpage" class="widget-content"  style="display: none">
                        <div class="tabbable">
                            <br>
                            <div class="tab-pane" id="formcontrols">
                                <form id="edit-profile" class="form-horizontal" name="myForm" ng-submit="processForm(myForm.$valid)"  novalidate>
                                    <fieldset>

                                        <div class="control-group">
                                            <label class="control-label" for="name" >姓名</label>
                                            <div class="controls">
                                                <input type="text" class="span6 " name="name"   id="name"  placeholder="名称"
                                                       ng-model="formData.name" required>
                                                <div class="alert alert-danger span4"  ng-show="myForm.name.$error.required"
                                                     role="alert">姓名必须</div>
                                            </div> <!-- /controls -->
                                        </div>

                                        <div class="control-group" ng-show="formData._id===undefined">
                                            <label class="control-label" for="password">密码</label>
                                            <div class="controls">
                                                <div class="input-append">
                                                    <input class="span4 m-wrap"   id="password" type="password"
                                                           ng-model="formData.password" ng-minlength="5" ng-maxlength="300" required  >
                                                    <div class="alert alert-danger span4"  ng-show="myForm.password.$dirty &&
                                                myForm.password.$invalid && !myForm.password.$pristine"
                                                         role="alert">5-30个非特殊字符</div>
                                                </div>
                                            </div>
                                        </div><!--control group-->
                                        <div class="control-group" ng-show="formData._id===undefined">
                                            <label class="control-label" for="checkpassword">确认密码</label>
                                            <div class="controls">
                                                <div class="input-append">
                                                    <input class="span4 m-wrap"   id="checkpassword" type="password"
                                                           ng-model="formData.checkpassword" >
                                                </div>
                                            </div>
                                        </div><!--control group-->
                                        <div class="control-group">
                                            <label class="control-label" for="mobile">手机</label>
                                            <div class="controls">
                                                <input type="tel" class="span4" id="mobile"  ng-model="formData.mobile"
                                                       required >
                                                <div class="alert alert-danger span4"  ng-show="myForm.mobile.$error.required"
                                                     role="alert">手机号必须</div>
                                            </div> <!-- /controls -->
                                        </div> <!-- /control-group -->


                                        <div class="control-group">
                                            <label class="control-label" for="is_lock">用户状态</label>
                                            <div class="controls">
                                                <select class="span4" id="is_lock"     required >
                                                    <option value=false>正常</option>
                                                    <option value=true>锁定</option>
                                                </select>
                                            </div> <!-- /controls -->
                                        </div> <!-- /control-group -->
                                        <div class="control-group">
                                            <label class="control-label" for="schoolid">所在驾校</label>
                                            <div class="controls">
                                                <select class="span4" id="schoolid">
                                                    <% extradata.forEach(function(r,index){ %>
                                                    <option value="<%=r._id%>"><%=r.name%></option>
                                                    <%})%>
                                                </select>
                                            </div> <!-- /controls -->
                                        </div> <!-- /control-group -->
                                        <br />
                                        <div class="form-actions">
                                            <button type="submit" class="btn btn-primary" ng-disabled="myForm.$invalid" >提交</button>
                                        </div> <!-- /form-actions -->
                                    </fieldset>
                                </form>
                            </div>
                        </div>

                    </div>
                </div>
            </div>

        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>
<!-- /main-inner -->
</div>
<script type="text/javascript" src="/js/plupload/plupload.full.min.js"></script>
<script type="text/javascript" src="/js/plupload/i18n/zh_CN.js"></script>
<script type="text/javascript" src="/js/qiniu.js"></script>
<script type="text/javascript" src="/js/qiniuupfile.js"></script>
<script>
    ybxcApp.controller("headmasterlist",function($scope,$http){
        $scope.formData = {};
        var schoolid="<%=schoolid%>";
        //获取文档列表信息
        initPagination($scope,$http,"<%=searchKey%>","/admin/manage/getheadmasterlist?bussinsee=mer&schoolid=<%=schoolid%>");

        $scope.addheadmaster=function(){
            $scope.formData = {};
            layer.open({
                type: 1,
                title: '添加驾校校长',
                maxmin: true,
                shadeClose: true, //点击遮罩关闭层
                area : ['850px' , '600px'],
                content:$("#editpage")
            });
        };
        $scope.editheadmaster=function(userid,name){
            $scope.formData = {};
            for (i=0;i<$scope.data.length;i++){
                if ($scope.data[i]._id==userid){
                    $scope.formData=$scope.data[i];
                    break;
                }
            };
            if ($scope.formData._id===undefined){
                layer.msg("没有查到用户", {
                    icon: 2,
                    time: 5000 //2秒关闭（如果不配置，默认是3秒）
                });
                return;
            };
            $("#is_lock").val(($scope.formData.is_lock?$scope.formData.is_lock:0));
            $("#schoolid").val($scope.formData.driveschool?$scope.formData.driveschool._id:"");

            layer.open({
                type: 1,
                title: '编辑校长：'+name,
                maxmin: true,
                shadeClose: true, //点击遮罩关闭层
                area : ['850px' , '500px'],
                content:$("#editpage")
            });
        }
        $scope.processForm = function(isValid){
            if (!isValid){
                alert("参数错误");
                return;
            }
            if(!savedata()){
                return;
            }
            console.log($scope.formData);
            //return;
            $http.post("/admin/manage/updateheadmaster",$scope.formData)
                    .success(function(response){
                        if (response.type==0){
                            layer.msg(response.msg, {
                                icon: 2,
                                time: 5000 //2秒关闭（如果不配置，默认是3秒）
                            });
                        }else{
                            layer.msg("更新成功", {
                                icon: 1,
                                time: 5000 //2秒关闭（如果不配置，默认是3秒）
                            });
                            window.location.href="/admin/manage/headmastermanger";
                        }
                    })
        };
        var savedata=function(){//写入数据
            $scope.formData.is_lock=$("#is_lock").val();
            $scope.formData.driveschool= $("#schoolid").val();
            //console.log($scope.formData.schoolid);
            if($scope.formData._id===undefined){
                if ($scope.formData.password!=$scope.formData.checkpassword){
                    layer.msg("两次密码必须相等", {
                        icon: 2,
                        time: 5000 //2秒关闭（如果不配置，默认是3秒）
                    }); return false;

                }
            }
            if ( $scope.formData.driveschool.indexOf(undefined)>=0){
                layer.msg("必须选择驾校", {
                    icon: 2,
                    time: 5000 //2秒关闭（如果不配置，默认是3秒）
                });
                return false;
            }
            return true;
        }
    });



</script>